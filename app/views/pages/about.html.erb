<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "inne profilowe.jpg", width: 300, alt: "Profile Image", class: 'profile-img' %>

        <div class="skills">
          <% @skills.each do |skill| %>
          <div class="skill">
            <h4><%= skill.title %></h4>
            <div class="progress">
              <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" aria-valuenow="<%= skill.percent_utilized %>" aria-valuemax="100" style="width: <%= skill.percent_utilized %>%">
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-8">
        <p>I have only just started my journey with programming.</p>
      </div>
    </div>
  </div>
</div>
